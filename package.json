{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "ci:eslint": "eslint -f json src -o ./.ci/eslint.json",
    "dev": "vite",
    "format": "prettier --write .",
    "i18next": "i18next",
    "lint": "eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepare": "husky",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest --ui",
    "test:ci": "vitest run"
  },
  "commitlint": {
    "extends": [
      "ali"
    ]
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.2.5",
    "@guoyunhe/react-auth": "3.0.0-4",
    "@mui/icons-material": "^6.4.6",
    "@mui/material": "^6.4.6",
    "i18next": "^24.2.2",
    "material-app": "^2.0.0",
    "material-compact": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-fast-fetch": "^1.12.0",
    "react-i18next": "^15.4.1",
    "wouter": "^3.6.0",
    "xior": "~0.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.17.22",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/ui": "^3.0.7",
    "commitlint-config-ali": "^1.1.0",
    "eslint": "^9.21.0",
    "eslint-config-ali": "^16.1.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "happy-dom": "^17.1.8",
    "husky": "^9.1.7",
    "i18next-parser": "^9.3.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-config-ali": "^1.3.2",
    "prettier-plugin-packagejson": "^2.5.10",
    "typescript": "^5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-adsense": "^1.1.1",
    "vite-plugin-ejs": "^1.7.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  }
}
